{% extends 'base.jinja' %}

{% block title %}Nest{% endblock %}

{% block css %}
{{ super() }}
<style>
    #signin_form {
        width: 26em;
        margin-left: auto;
        margin-right: auto;
    }
</style>
{% endblock css %}

{% block headjs %}
{{ super() }}
<script src="https://unpkg.com/htmx.org/dist/ext/response-targets.js"></script>
{% endblock headjs %}

{% block content %}
<section id="signin_form" hx-ext="response-targets">
    <h1>Sign In</h1>
    <form
        hx-swap="outerHTML"
        hx-post="/manage/login"
        hx-target-401="#errorMessage"
        hx-target-5XX="#errorMessage"
    >
        <section>
            <label for="username">Username</label>
            <input type="text" placeholder="Enter Username" name="username" required>
        </section>
        <section>
            <label for="password">Password</label>
            <input type="password" placeholder="Enter Password" name="password" required>
        </section>
        <section>
            <button type="submit">Login</button>
            <a href="#" disabled>Forgot Password?</a>
            <br>
            <a href="/manage/sign_up">Create an account</a>
        </section>
    </form>
</section>

<dialog close id="errorMessage">
</dialog>

{% endblock content %}
